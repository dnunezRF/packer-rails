{
    "push": {
        "name": "elct9620/rails",
        "vcs": true
    },
    "variables": {
        "rvm_version": "stable",
        "ruby_version": "2.2.2",
        "gems": "bundler rails",
        "hostname": "rails.dev"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{user `hostname`}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "http_directory": "http",
            "guest_os_type": "Ubuntu_64",
            "iso_url": "http://releases.ubuntu.com/14.04.2/ubuntu-14.04.2-server-amd64.iso",
            "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
            "iso_checksum_type": "md5",
            "ssh_username": "rails",
            "ssh_port": 22,
            "ssh_wait_timeout": "1000s",
            "shutdown_command": "sudo -S shutdown -P now",
            "headless": true
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{user `hostname`}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "guest_os_type": "Ubuntu-64",
            "http_directory": "http",
            "iso_url": "http://releases.ubuntu.com/14.04.2/ubuntu-14.04.2-server-amd64.iso",
            "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
            "iso_checksum_type": "md5",
            "ssh_username": "rails",
            "ssh_port": 22,
            "ssh_wait_timeout": "1000s",
            "shutdown_command": "sudo -S shutdown -P now",
            "headless": true
        },
        {
            "type": "parallels-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{user `hostname`}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "http_directory": "http",
            "guest_os_type": "ubuntu",
            "iso_url": "http://releases.ubuntu.com/14.04.2/ubuntu-14.04.2-server-amd64.iso",
            "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
            "iso_checksum_type": "md5",
            "ssh_username": "rails",
            "ssh_port": 22,
            "ssh_wait_timeout": "1000s",
            "shutdown_command": "sudo -S shutdown -P now",
            "parallels_tools_flavor": "lin"

        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/vm-setup.sh",
                "scripts/vagrant.sh",
                "scripts/cleanup.sh",
                "scripts/zerodisk.sh"
            ]
        },
        {
            "type": "shell",
            "script": "scripts/install-rvm.sh",
            "execute_command": "{{ .Vars }} {{ .Path }} {{user `rvm_version`}}"
        },
        {
            "type": "shell",
            "script": "scripts/install-ruby.sh",
            "execute_command": "{{ .Vars }} {{ .Path }} {{user `ruby_version`}} {{user `gems`}}"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": false
        }
    ]
}
